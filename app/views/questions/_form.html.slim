.row.mt-3
	.col.col-md-4
		.card.border-primary
			.card-body
				= form_for([@quiz, @question]) do |form|
					= render 'shared/errors', resource: @question

					.form-group.m-2
						= form.label(:title, class: 'm-2')
						= form.text_field(:title, class: 'm-2', placeholder: 'Some title')
						br

						= form.submit('Submit', class: 'btn btn-primary m-2')